<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewInventory">




    <LinearLayout
        android:id="@+id/your_outer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnViewInventory"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="0.333"
            android:background="@color/colorPrimary"
            android:text="INVENTORY" />

        <Button
            android:id="@+id/inStock"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_toRightOf="@+id/btnDelete"
            android:layout_weight="0.333"
            android:background="@color/colorPrimary"
            android:text="IN STOCK" />

        <Button
            android:id="@+id/outOfStock"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_toRightOf="@+id/btnDelete"
            android:layout_weight="0.333"
            android:background="@color/colorPrimary"
            android:text="OUT OF STOCK" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/your_outer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addItem"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_weight="0.25"
            android:background="#000"
            android:textColor="#FFFFFF"
            android:text="ADD ITEM" />

        <Button
            android:id="@+id/addPerson"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_toRightOf="@+id/btnDelete"
            android:layout_weight="0.25"
            android:background="#000"
            android:textColor="#FFFFFF"
            android:text="Add PERSON" />

        <Button
            android:id="@+id/viewList"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_toRightOf="@+id/btnDelete"
            android:layout_weight="0.25"
            android:background="#000"
            android:textColor="#FFFFFF"
            android:text="INVENTORY" />

        <Button
            android:id="@+id/viewPeopleButton"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_toRightOf="@+id/btnDelete"
            android:layout_weight="0.30"
            android:background="#000"
            android:textColor="#FFFFFF"
            android:text="UPDATE PEOPLE" />
    </LinearLayout>

    <ListView
        android:id="@+id/inventoryList"
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="76dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inventoryList"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-76dp"
        android:text="Full Inventory" />


</RelativeLayout>